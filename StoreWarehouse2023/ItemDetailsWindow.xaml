<Window x:Class="StoreWarehouse2023.ItemDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreWarehouse2023"
        mc:Ignorable="d"
        Title="ItemDetailsWindow" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Margin="0 0 0 10" />
            <TextBlock Text="Характеристика 1:" />
            <TextBlock Text="{Binding Characteristic1}" Margin="0 0 0 10" />
            <TextBlock Text="Характеристика 2:" />
            <TextBlock Text="{Binding time}" />
        </StackPanel>
    </Grid>
</Window>
